<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
       android:layout_marginTop="0dp"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/splashphoto"
       android:id="@+id/spladhphoto"
       android:scaleType="centerCrop"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appname_splash"
        android:text="Movie Snap"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/spladhphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="version 1.0.2"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_below="@+id/appname_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>